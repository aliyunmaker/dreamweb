<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.landingzone.dreamweb.dao.RSADao">
    <insert id="addRSAKey" parameterType="cc.landingzone.dreamweb.model.SystemConfig"
        useGeneratedKeys="true" keyProperty="id">
        insert ignore into system_config
        (config_name,
         config_value,
         comment,
         gmt_create)
        values (#{configName},
                #{configValue},
                #{comment},
                now())
    </insert>

    <update id="updateRSAKey" parameterType="cc.landingzone.dreamweb.model.SystemConfig">
        update system_config
        set config_value = #{configValue}
        where id = #{id}
    </update>

    <select id="getRSAKeyByName" resultType="cc.landingzone.dreamweb.model.SystemConfig">
        select *
        from system_config
        where config_name = #{configName}
    </select>
</mapper>