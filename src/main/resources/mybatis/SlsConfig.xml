<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cc.landingzone.dreamweb.dao.SlsConfigDao">
    <insert id="addSlsConfig" parameterType="cc.landingzone.dreamweb.model.SlsConfig"
            useGeneratedKeys="true" keyProperty="id">
        insert into sls_config
        (config_name,
        config_value,
        config_owner_id,
        comment,
        gmt_create)
        values (#{configName},
        #{configValue},
        #{configOwnerId},
        #{comment},
        now())
    </insert>

    <update id="updateSlsConfig" parameterType="cc.landingzone.dreamweb.model.SlsConfig">
        update sls_config
        set config_name = #{configName},
        config_value    = #{configValue},
        comment         = #{comment}
        where id = #{id}
    </update>

    <select id="listSlsConfig" resultType="cc.landingzone.dreamweb.model.SlsConfig">
        select *
        from sls_config
    </select>

    <select id="getSlsConfigById" resultType="cc.landingzone.dreamweb.model.SlsConfig">
        select *
        from sls_config
        where id = #{id}
    </select>

    <select id="getSlsConfigByOwnerId" resultType="cc.landingzone.dreamweb.model.SlsConfig">
        select *
        from sls_config
        where config_owner_id = #{configOwnerId}
    </select>

    <delete id="deleteSlsConfig" parameterType="int">
        delete
        from sls_config
        where id = #{id}
    </delete>
</mapper>